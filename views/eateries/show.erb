<tr>
<td><%= @eatery.name %></td>
<td>|<td>
<td><%= @eatery.address %></td>
<td>|<td>
<td><a class="link" href="<%= @eatery.url %>">Website</a></td>
<% deals = @eatery.find_deals %>
<% if deals != nil %>
<p>Deals:</p>
<ul>
<% for deal in deals %>
<li><a class="link" href="/deals/<%= deal.id %>"><%= deal.name %></a></li>
<% end %>
</ul>
<% end %>

<a class="button" href="/deals/new">Create a new deal!</a>

<% burgers = @eatery.find_burgers %>
<% if burgers != nil %>
<p>Burgers:</p>
<ul>
<% for burger in burgers %>
<tr><%= burger.name %></tr>
<tr>|</tr>
<tr><%= "%.2f" % burger.price %></tr>
<br />
<% end %>
</ul>
<% end %>

<a class="button" href="/eateries/<%= @eatery.id %>/new">Create a new burger!</a>

</tr>
