<div class="eateryindex">
<% for eatery in @eateries %>
<tr>
  <td><a class="link" href='/eateries/<%= eatery.id %>'><%= eatery.name %></a></td>
  <td>|</td>
  <td><%= eatery.address %></td>
  </tr>
  <% deals = eatery.find_deals %>
  <% if deals != nil %>
  <ul>
  <% for deal in deals %>
  <li>
  <a class="link" href="/deals/<%= deal.id %>"><%= deal.name %></a>
  </li>
  <br />
  <% end %>
  <br />
  </ul>
  <% end %>
<% end %>

<a class="button" href="eateries/new">Create new Eatery!</a>
</div>
